<p id="notice"><%= notice %></p>

<h1>ブックマーク一覧</h1>

<table>
  <% @bookmarks.each do |bookmark| %>
    <tr>
      <td>
        <% if bookmark.image.present? %>
          <%= image_tag(image_path(bookmark.image), height: '100px') %>
        <% end %>
      </td>
      <td><%= link_to bookmark.title, bookmark %></td>
      <td><%= "#{bookmark.score} pts. / 100 pts." %></td>
    </tr>
  <% end %>
</table>
<br>

<%= link_to "新しいブックマークを作成する", new_bookmark_path %>
